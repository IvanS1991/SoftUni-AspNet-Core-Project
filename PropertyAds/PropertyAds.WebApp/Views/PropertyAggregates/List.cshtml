@model PropertyAggregateListViewModel

<div class="col-8 offset-2">
    <table class="table">
        <thead>
            <tr>
                <th class="col-5" scope="col">Квартал</th>
                <th class="col-3" scope="col">Вид имот</th>
                <th class="col-2" scope="col">Средна Цена</th>
                <th class="col-2" scope="col">Средна Цена / кв.м.</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var aggregate in Model.Rows)
            {
                <tr>
                    <th class="col-5" scope="row">@aggregate.District</th>
                    <th class="col-3" scope="row">@aggregate.PropertyType</th>
                    <td class="col-2">@(aggregate.AveragePrice == 0 ? "-" : aggregate.AveragePrice)</td>
                    <td class="col-2">@(aggregate.AveragePricePerSqM == 0 ? "-" : aggregate.AveragePricePerSqM)</td>
                </tr>
            }
        </tbody>
    </table>
    @if (Model.PageCount > 1)
    {
        <nav aria-label="Page navigation example">
            <ul class="pagination pagination-sm">
                <li class="page-item">
                    <a class="page-link" asp-controller="PropertyAggregates" asp-action="List" asp-route-page="@(Model.CurrentPage - 1)">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                @for (int i = 0; i < Model.PageCount; i++)
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="PropertyAggregates" asp-action="List" asp-route-page="@(i + 1)">@(i + 1)</a>
                    </li>
                }
                <li class="page-item">
                    <a class="page-link" asp-controller="PropertyAggregates" asp-action="List" asp-route-page="@(Model.CurrentPage + 1)">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            </ul>
        </nav>
    }
</div>